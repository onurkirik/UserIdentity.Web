@model List<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin">Role Ekle</a>


<h1>Roller</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Rol Id</th>
            <th scope="col">Rol Adı</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td><a asp-area="Admin" asp-controller="Roles" asp-action="RoleUpdate" asp-route-id="@role.Id">Güncelle</a></td>
                <td><a asp-area="Admin" asp-controller="Roles" asp-action="RoleDelete" asp-route-id="@role.Id">Sil</a></td>
            </tr>
        }
    </tbody>
</table>