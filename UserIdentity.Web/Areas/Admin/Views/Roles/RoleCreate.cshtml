@model RoleCreateViewModel

@{
    ViewData["Title"] = "RoleAdd";
}

<h1>Rol Oluşturma</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleCreate" class="" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control mt-4" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group mt-4">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Sayfaya Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
