@model List<UserListViewModel>
@{
    ViewData["Title"] = "UserList";
}

<h1>Kullanıcılar</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Kullanıcı ID</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Mail Adresi</th>
            <th scope="col">Roller</th>
            <th scope="col">Telefon Numarası</th>
            <th>Rol İşlemleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
           <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <user-role-names user-id="@user.Id"></user-role-names>
                </td>
                <td>@user.Phone</td>
                <td>
                    <a asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@user.Id">Rol Ata</a>
                </td>
            </tr>   
        }
    </tbody>
</table>