@model UserViewModel


@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <user-picture-thumnail class="rounded" style="width:200px;" picture-url="@Model.PictureUrl"></user-picture-thumnail>
    </div>
</div>

<h1>Kullanıcı Bilgileri</h1>

<table>
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Telefon No</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.UserName</td>
            <td>@Model.Email</td>
            <td>@Model.PhoneNumber</td>
        </tr>
    </tbody>
</table>
