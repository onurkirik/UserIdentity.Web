@model UserEditViewModel
@{
    ViewData["Title"] = "UserEdit";
}

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<h1>Kullanıcı Düzenleme</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
</div>

<form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
    <div class="row mb-3">
        <label for="UserName" class="col-sm-2 col-form-label" asp-for="UserName"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Email" class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Phone" class="col-sm-2 col-form-label" asp-for="Phone"></label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="BirthDate" class="col-sm-2 col-form-label" asp-for="BirthDate"></label>
        <div class="col-sm-10">
            <input asp-for="BirthDate" class="form-control">
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="City" class="col-sm-2 col-form-label" asp-for="City"></label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Gender" class="col-sm-2 col-form-label" asp-for="Gender"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="Gender" asp-items="ViewBag.genderList">
                <option value="">
                    Cinsiyet Seçiniz
                </option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Picture" class="col-sm-2 col-form-label" asp-for="Picture"></label>
        <div class="col-sm-10">
            <input type="file" asp-for="Picture" class="form-control">
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
    </div>


    <button type="submit" class="btn btn-primary float-end">Güncelle</button>
</form>
