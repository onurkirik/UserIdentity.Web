@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
}

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<h2>Kullanıcı Kayıt</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
 }

<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
</div>

<form asp-controller="Home" asp-action="SignUp" method="post">
    <div class="row mb-3">
        <label for="UserName" class="col-sm-2 col-form-label" asp-for="UserName"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Email" class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Phone" class="col-sm-2 col-form-label" asp-for="Phone"></label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Password" class="col-sm-2 col-form-label" asp-for="Password"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="PasswordConfirm" class="col-sm-2 col-form-label" asp-for="PasswordConfirm"></label>
        <div class="col-sm-10">
            <input asp-for="PasswordConfirm" class="form-control">
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary float-end">Kayıt Ol</button>
</form>

