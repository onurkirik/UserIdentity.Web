@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "ForgetPassword";
}

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@if(TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<h4 class="alert alert-info">Şifre yenileme linki, e-posta adresine gönderilecektir.</h4>

<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
</div>

<form method="post">
    <div class="row mb-3">
        <label for="Email" class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary float-end">Gönder</button>
</form>
